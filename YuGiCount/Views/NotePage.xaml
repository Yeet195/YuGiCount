<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YuGiCount.Views.NotePage"
             Title="NotePage">
    
    <VerticalStackLayout Spacing="10" Margin="5">
        <Editor x:Name="TextEditor"
            Placeholder="Enter your note"
            Text="{Binding Text}"
            HeightRequest="100" />

        <StackLayout Orientation="Horizontal" Spacing="10">
            <RadioButton Content="Win" GroupName="DiceRoll" IsChecked="{Binding IsWin, Converter={StaticResource BoolToWinConverter}, Mode=TwoWay}" />
            <RadioButton Content="Loss" GroupName="DiceRoll" IsChecked="{Binding IsWin, Converter={StaticResource BoolToLossConverter}, Mode=TwoWay}" />
        </StackLayout>

        <Grid ColumnDefinitions="*,*" ColumnSpacing="4">
            <Button Text="Save"
                Clicked="SaveButton_Clicked" />
            <Button Grid.Column="1"
                Text="Delete"
                Clicked="DeleteButton_Clicked" />
        </Grid>
    </VerticalStackLayout>

</ContentPage>